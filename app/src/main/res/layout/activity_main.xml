<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FF222B7C" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/numeroTexto"
        android:gravity="right"
        android:textSize="70dp"
        android:textColor="#fff"
        android:backgroundTint="#fff"
         />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:paddingTop="20dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonSeven"
            android:textSize="40dp"
            android:text="7"
            android:backgroundTint="#fff"
            android:onClick="pressNumber"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonEight"
            android:textSize="40dp"
            android:text="8"
            android:backgroundTint="#fff"
            android:onClick="pressNumber"
            android:allowUndo="true" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonNine"
            android:textSize="40dp"
            android:text="9"
            android:onClick="pressNumber"
            android:backgroundTint="#fff"
             />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonClear"
            android:textSize="40dp"
            android:text="C"
            android:onClick="pressClear"
            android:backgroundTint="#3e3c3c"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:paddingTop="20dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonFour"
            android:textSize="40dp"
            android:text="4"
            android:onClick="pressNumber"
            android:backgroundTint="#fff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonFive"
            android:textSize="40dp"
            android:text="5"
            android:onClick="pressNumber"
            android:backgroundTint="#fff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonSix"
            android:textSize="40dp"
            android:text="6"
            android:onClick="pressNumber"
            android:backgroundTint="#fff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonDiv"
            android:textSize="40dp"
            android:text="/"
            android:onClick="pressDiv"
            android:backgroundTint="#3e3c3c"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:paddingTop="20dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonOne"
            android:textSize="40dp"
            android:text="1"
            android:onClick="pressNumber"
            android:backgroundTint="#fff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonTwo"
            android:textSize="40dp"
            android:text="2"
            android:onClick="pressNumber"
            android:backgroundTint="#fff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonThree"
            android:textSize="40dp"
            android:text="3"
            android:onClick="pressNumber"
            android:backgroundTint="#fff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonMul"
            android:textSize="40dp"
            android:text="x"
            android:onClick="pressMul"
            android:backgroundTint="#3e3c3c"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:paddingTop="20dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonEqual"
            android:textSize="40dp"
            android:text="="
            android:onClick="pressEqual"
            android:backgroundTint="#3e3c3c"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonZero"
            android:textSize="40dp"
            android:text="0"
            android:onClick="pressNumber"
            android:backgroundTint="#fff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonPlus"
            android:textSize="40dp"
            android:text="+"
            android:onClick="pressPlus"
            android:backgroundTint="#3e3c3c"
            android:textColor="#ffffff"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id = "@+id/buttonMinus"
            android:textSize="40dp"
            android:text="-"
            android:onClick="pressMinus"
            android:backgroundTint="#3e3c3c"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>
